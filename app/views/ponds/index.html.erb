<h1>Listing ponds</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Address latitude</th>
    <th>Address longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @ponds.each do |pond| %>
      <tr>
        <td><%= pond.address %></td>
        <td><%= pond.address_latitude %></td>
        <td><%= pond.address_longitude %></td>
        <td><%= link_to 'Show', pond %></td>
        <td><%= link_to 'Edit', edit_pond_path(pond) %></td>
        <td><%= link_to 'Destroy', pond, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

